/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for data stored under the `/users/{userId}` path.
 * Each user has full control over their own data, and no access to other users' data. Anonymous authentication is supported.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user-specific data (e.g., FCM tokens).
 * - `/users/{userId}/students/{studentId}`: Stores student data uploaded by the user.
 *
 * Key Security Decisions:
 * - Users can only read, create, update, and delete their own students data.
 * - Users can only manage their own user document.
 *
 * Denormalization for Authorization:
 *  - The `userId` is already part of the path for both `/users/{userId}` and `/users/{userId}/students/{studentId}`, so no denormalization is needed.
 *
 * Structural Segregation:
 *  - All data is private and user-specific, stored under the `/users/{userId}` collection. There are no public collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to a user's own document.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own document.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { ...user data... }
     * @allow (get) User with ID 'user123' can read their own document.
     *   request.auth.uid: 'user123'
     * @allow (update) User with ID 'user123' can update their own document.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { ...updated user data... }
     * @allow (delete) User with ID 'user123' can delete their own document.
     *   request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a document for user 'user123'.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { id: 'user123', ...user data... }
     * @deny (get) User with ID 'user456' cannot read user 'user123's document.
     *   request.auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update user 'user123's document.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { id: 'user123', ...updated user data... }
     * @deny (delete) User with ID 'user456' cannot delete user 'user123's document.
     *   request.auth.uid: 'user456'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's own students data.
     * @path /users/{userId}/students/{studentId}
     * @allow (create) User with ID 'user123' can create a student document under their user ID.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { ...student data... }
     * @allow (get) User with ID 'user123' can read a student document under their user ID.
     *   request.auth.uid: 'user123'
     * @allow (update) User with ID 'user123' can update a student document under their user ID.
     *   request.auth.uid: 'user123'
     *   request.resource.data: { ...updated student data... }
     * @allow (delete) User with ID 'user123' can delete a student document under their user ID.
     *   request.auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a student document under user 'user123's ID.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { ...student data... }
     * @deny (get) User with ID 'user456' cannot read a student document under user 'user123's ID.
     *   request.auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update a student document under user 'user123's ID.
     *   request.auth.uid: 'user456'
     *   request.resource.data: { ...updated student data... }
     * @deny (delete) User with ID 'user456' cannot delete a student document under user 'user123's ID.
     *   request.auth.uid: 'user456'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/students/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}
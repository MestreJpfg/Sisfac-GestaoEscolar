rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description This ruleset enforces a read-only policy on the 'alunos' collection,
     * allowing any user to read the data but restricting all write operations. This is 
     * suitable for public, read-only data where data modification is not permitted.
     * @path /alunos/{alunoId}
     * @allow (get, list) Any user can read a aluno document.
     * @deny (create, update, delete) No user can create, update, or delete a aluno document.
     * @principle Read-only data access for all users; prevents unauthorized data modification.
     */
    match /alunos/{alunoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
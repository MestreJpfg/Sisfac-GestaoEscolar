/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * - All student data is nested under /users/{userId}/students/{studentId}.
 * - User-specific data (e.g., FCM tokens) is stored at /users/{userId}.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing of users is disallowed.
 * - The rules are flexible on data shapes to allow for rapid prototyping, but strictly enforce authorization.
 * - The 'id' field is validated on create to match the document ID, enforcing path consistency.  This field is immutable on update.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to manage their own student data.
     * @path /users/{userId}/students/{studentId}
     * @allow (create) User A creates a new student document under their own user ID.
     * @allow (update) User A updates an existing student document under their own user ID.
     * @allow (delete) User A deletes a student document under their own user ID.
     * @deny (create) User A attempts to create a student document under User B's ID.
     * @deny (update) User A attempts to update a student document under User B's ID.
     * @deny (delete) User A attempts to delete a student document under User B's ID.
     * @principle Enforces document ownership and validates relational integrity.
     */
    match /users/{userId}/students/{studentId} {
      // Allow reads to the owner
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);

      // Allow create if the user is signed in and the userId matches the path.
      // Also validate that studentId matches document id.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == studentId;

      // Allow updates and deletes if the user is the owner and the document exists.
      // Enforce immutability of the 'id' field.
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own user data (e.g., FCM tokens).
     * @path /users/{userId}
     * @allow (create) User A creates their own user document.
     * @allow (update) User A updates their own user document.
     * @deny (create) User A attempts to create a user document for User B.
     * @deny (update) User A attempts to update a user document for User B.
     * @principle Enforces document ownership.
     */
    match /users/{userId} {
      // Allow reads to the owner
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is disallowed

      // Allow create if the user is signed in and the userId matches the path
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;

      // Allow updates and deletes if the user is the owner and the document exists
      // Enforce immutability of the 'id' field.
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isOwner(userId) && resource != null;
  }
}
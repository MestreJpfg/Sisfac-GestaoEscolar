/**
 * @fileoverview Firestore Security Rules for XLSX Viewer
 *
 * Core Philosophy: This ruleset enforces a strict user-ownership model, ensuring that users can only access and manipulate data associated with their own user ID.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Each user document is identified by the user's UID.
 * - /users/{userId}/uploadSessions/{uploadSessionId}: Stores metadata about XLSX upload sessions, linked to a specific user.
 * - /users/{userId}/uploadSessions/{uploadSessionId}/data/{dataId}: Stores the actual XLSX data, associated with a specific upload session and user.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete data under their own user ID.
 * - Listing of upload sessions and data is restricted to the owning user.
 *
 * Denormalization for Authorization:
 * - XLSXData documents include the uploadSessionId, which allows rules to verify the association with a specific upload session without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile.
     * @allow (get) Authenticated user can read their own profile.
     * @allow (update) Authenticated user can update their own profile.
     * @allow (delete) Authenticated user can delete their own profile.
     * @deny (create) Unauthenticated users cannot create profiles.
     * @deny (get) Authenticated user cannot read other user's profiles.
     * @principle Enforces document ownership.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to XLSX upload sessions for a specific user.
     * @path /users/{userId}/uploadSessions/{uploadSessionId}
     * @allow (create) Authenticated user can create upload sessions under their own user ID.
     * @allow (get) Authenticated user can read upload sessions under their own user ID.
     * @allow (update) Authenticated user can update upload sessions under their own user ID.
     * @allow (delete) Authenticated user can delete upload sessions under their own user ID.
     * @deny (create) Unauthenticated users cannot create upload sessions.
     * @deny (get) Authenticated user cannot read other user's upload sessions.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/uploadSessions/{uploadSessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to XLSX data entries within a user's upload session.
     * @path /users/{userId}/uploadSessions/{uploadSessionId}/data/{dataId}
     * @allow (create) Authenticated user can create data entries under their own upload session.
     * @allow (get) Authenticated user can read data entries under their own upload session.
     * @allow (update) Authenticated user can update data entries under their own upload session.
     * @allow (delete) Authenticated user can delete data entries under their own upload session.
     * @deny (create) Unauthenticated users cannot create data entries.
     * @deny (get) Authenticated user cannot read other user's data entries.
     * @principle Enforces document ownership and session-based access.
     */
    match /users/{userId}/uploadSessions/{uploadSessionId}/data/{dataId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Denies listing of students collection.
     * @path /students
     * @deny (list) No one can list the students collection.
     * @principle Prevents unauthorized listing of student data.
     */
    match /students/{studentId} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}